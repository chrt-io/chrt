{
  "name": "chrt",
  "version": "0.0.37",
  "description": "Chrt is a library for creating charts in the most fun way.",
  "main": "dist/chrt.node.js",
  "unpkg": "dist/chrt.min.js",
  "jsdelivr": "dist/chrt.min.js",
  "module": "index.js",
  "watch": {
    "build": {
      "extensions": "js,jsx"
    }
  },
  "scripts": {
    "pretest": "rimraf dist && mkdir dist && json2module package.json > dist/package.js && rollup -c",
    "test": "jest --passWithNoTests",
    "build": "rimraf dist && mkdir dist && json2module package.json > dist/package.js && rollup -c",
    "lint": "eslint index.js --fix",
    "watch": "npm-watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/chrt/chrt.git"
  },
  "author": "chrt",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/chrt/chrt/issues"
  },
  "homepage": "chrt.io",
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/plugin-transform-modules-commonjs": "^7.12.13",
    "@babel/preset-env": "^7.12.17",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-root-import": "^6.6.0",
    "eslint": "^7.20.0",
    "husky": "~4.3.0",
    "jest": "^26.6.3",
    "json2module": "0.0.3",
    "npm-watch": "^0.7.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.39.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-uglify": "^6.0.4",
    "watch": "^1.0.2"
  },
  "files": [
    "dist/**/*.js",
    "index.js"
  ],
  "dependencies": {
    "chrt-annotation": "^0.0.11",
    "chrt-axis": "^0.0.21",
    "chrt-bars": "^0.0.18",
    "chrt-core": "^0.0.27",
    "chrt-grid": "^0.0.15",
    "chrt-interpolations": "^0.0.6",
    "chrt-label": "^0.0.18",
    "chrt-line": "^0.0.17",
    "chrt-markers": "^0.0.12",
    "chrt-points": "^0.0.11"
  }
}

{
  "name": "chrt",
  "version": "0.0.85",
  "description": "Chrt is a library for creating charts in the most fun way.",
  "main": "dist/chrt.node.js",
  "unpkg": "dist/chrt.min.js",
  "jsdelivr": "dist/chrt.min.js",
  "module": "index.js",
  "watch": {
    "build": {
      "extensions": "js,jsx"
    }
  },
  "scripts": {
    "test": "jest --passWithNoTests",
    "build": "rimraf dist && mkdir dist && json2module package.json > dist/package.js && rollup -c",
    "postversion": "rimraf dist && mkdir dist && json2module package.json > dist/package.js && rollup -c",
    "lint": "eslint index.js --fix",
    "watch": "npm-watch",
    "dev": "budo test/index.js:bundle.js --live --dir test/chrts  -- -t [ babelify --extensions .js ]"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/chrt/chrt.git"
  },
  "author": "chrt",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/chrt/chrt/issues"
  },
  "homepage": "chrt.io",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "babel-jest": "^27.0.6",
    "babel-plugin-root-import": "^6.6.0",
    "babelify": "^10.0.0",
    "budo": "^11.6.4",
    "eslint": "^7.30.0",
    "husky": "~7.0.1",
    "jest": "^27.0.6",
    "json2module": "0.0.3",
    "npm-watch": "^0.10.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-uglify": "^6.0.4",
    "watch": "^1.0.2"
  },
  "files": [
    "dist/**/*.js",
    "./index.js"
  ],
  "dependencies": {
    "chrt-annotation": "^0.0.16",
    "chrt-axis": "^0.0.35",
    "chrt-bars": "^0.0.35",
    "chrt-core": "^0.0.47",
    "chrt-dotplot": "0.0.2",
    "chrt-grid": "^0.0.18",
    "chrt-interpolations": "^0.0.9",
    "chrt-label": "^0.0.26",
    "chrt-line": "^0.0.29",
    "chrt-markers": "^0.0.16",
    "chrt-points": "^0.0.20",
    "chrt-set": "0.0.2"
  }
}
